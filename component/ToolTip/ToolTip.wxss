.v5_tool_tip {
   display: flex; 
    align-items: center; 
    position: fixed;
    top: 0;
    width:100%;
    margin-top: -35px;
    padding:0 20rpx;
    font-weight:400;
    font-size: 30rpx;
    color:white;
    white-space: nowrap;
    overflow-x: hidden;
    min-height: 80rpx;
    background:#FFF;
    opacity: 0;
    z-index: 100;
    zoom: 1;
}
.v5_tool_tip .v5_info_text {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin:auto 12rpx;
    color: #666;
}
.v5_info_success .v5_info_text {
    color: #09BB07;
}
.v5_info_info .v5_info_text {
    color: #09BB07;
}
.v5_info_warn .v5_info_text {
    color: #FFBE00;
}
.v5_info_error .v5_info_text {
    color: #F76260;
}
.v5_tool_tip .v5_info_icon {
    float: right;
    margin-right: 42rpx;
}